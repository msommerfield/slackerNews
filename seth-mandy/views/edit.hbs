<div class="container">
  <a href="/{{slack.id}}">Back</a>
  <h2>Edit {{slack.title}}</h2>
  <div class="col-8">
    <form action="/{{slack.id}}?_method=PUT" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="name" value="{{slack.title}}">
      </div>
      <div class="form-group">
        <label for="rating">Description</label>
        <input class="form-control" type="number" name="description" id="description" value={{slack.description}}>
      </div>
      <div class="form-group">
        <label for="imgLink">Url</label>
        <input class="form-control" type="text" name="imgLink" id="imgLink" value="{{slack.imgLink}}">
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        <textarea class="form-control" name="date">
          {{slack.date}}
        </textarea>
      </div>
      <input class="btn btn-info" type="submit" value="UPDATE">
    </form>
  </div>
</div>