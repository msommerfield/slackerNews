<div class="container">
    <a class="btn btn-info" href="/new">+ Add Slack</a>

    <h2 class="text-center">Slacks</h2>

    {{#each Slack}}
        <div class="row review">
            <div class="col-sm-4">
                <p class="review-img" >
                    {{url}}
                </p>
            </div>
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-6">
                        <h4>
                            <a href="/{{id}}">{{title}}</a>
                        </h4>
                    </div>
                    <div class="col-sm-6">
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col review-quote">
                        {{description}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>